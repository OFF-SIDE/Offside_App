<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="355dp"
        android:layout_height="210dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userbooking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약자 이름" />

        </LinearLayout>

        <EditText
            android:id="@+id/usernameEdit"
            android:layout_width="130dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="text"
            android:hint="예약명을 입력하세요"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userbooking_pnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화 번호 " />

        </LinearLayout>

        <EditText
            android:id="@+id/userpnumEdit"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="전화번호를 입력하세요"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/userinfoEdit"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="예약 날짜, 시간, 구장, 주의 사항을 알려주세요."
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/userbooking_btn1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:text="예약하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userbooking_btn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.393" />

    <Button
        android:id="@+id/userbooking_btn3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="40dp"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userbooking_btn1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.393" />

</androidx.constraintlayout.widget.ConstraintLayout>