<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="355dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userbooking_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="예약자 이름"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/reserve_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosanskr_medium"
            android:text="TextView"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userbooking_pnum"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="예약자 전화 번호"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/reserve_pnum"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:fontFamily="@font/notosanskr_medium"
            android:text="TextView"
            android:textColor="@color/black" />


    </LinearLayout>

    <Button
        android:id="@+id/booking_btn1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="224dp"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/booking_btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.175" />

    <Button
        android:id="@+id/booking_btn2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="224dp"
        android:text="예약 취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/booking_btn1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>